	<header>
		 <div class="container-fluid">
			<div class="row-fluid">
				<div class = "span2">
						<div class='logo'>
							<%= image_tag('/eighth-notes-logo-big.png') %>
							<%= link_to "stage.ly", root_path %>
						</div>
				</div>	
				<div class ="span8">
					<div class="row-fluid">
						
							<div class ="span8">
								<div class="hidden-phone">
								<div class='slogan'>
									<% if @event && @event.url != "" %>
									<%= link_to full_slogan(yield(:title)).html_safe, "http://#{@event.url}" %>
									<% else %>
									<%= full_slogan(yield(:title)).html_safe %>
									<%end%>
								</div>
								</div>
							</div>
							<div class ="span4">
								<div class="search_box">
				                    <%= form_tag events_path, :method => 'get' do %>
				                      <%= text_field_tag :q, nil, :placeholder => 'Suche Konzerte ...'%>
			                    	<% end %>
			                  	</div>
              				</div>
              				<br>
              				<div class="visible-phone">
								<div class='slogan'>
									<% if @event && @event.url != "" %>
									<%= link_to full_slogan(yield(:title)).html_safe, "http://#{@event.url}" %>
									<% else %>
									<%= full_slogan(yield(:title)).html_safe %>
									<%end%>
								</div>
								</div>
              				<div class="row-fluid">
							<div class="hidden-phone"><div class="fb-like span8" data-send="true" data-width="240" data-show-faces="false"></div></div>
							</div>	
				
					</div>
				</div>					
			</div>
		</div>
	</header>
 <div class="container-fluid">
	<div class="row-fluid"> 
		 <div class="hidden-phone">
		 	<%= render 'layouts/menu'%>	
		</div>
		<div class="span8">
			<div class="row-fluid">
				<%= yield %>
			</div>
		</div> 
	</div>
</div>




<footer>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class ="span2"%></div>
			<div class="span8">
				<b><%= mail_to "stage.ly@gmail.com", "Fehlt ein Konzert? / Konzert hinzufügen!", :subject => 'fehlendes Konzert!', :class=> 'sea_green' %></b><br><br>
				<%= mail_to "stage.ly@gmail.com", "Feedback", :subject => 'Feedback', :class=> 'sea_green' %>  ·  <%= link_to "Impressum", imprint_path %> · (c) stage.ly
			</div>
		</div>
	</div>
</footer>
</body>

</html>
