<!DOCTYPE html>
<html>
<head>
  <title><%= full_slogan(yield(:page_title)) %> - stage.ly</title>
   <meta name="description" content="<%= full_slogan(yield(:page_title)) %>"/>     
    <meta name="keywords" content="<%= yield(:keywords) + ", " + "Berlin, Konzerte, Concerts"%>"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=367315919957325";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
	<header>
		 <div class="container-fluid">
			<div class="row-fluid">
				<div class = "span2">
						<div class='logo'>
							<%= image_tag('/eighth-notes-logo-big.png') %>
							<%= link_to "stage.ly", root_path %>
						</div>
				</div>	
				<div class ="span10">
					<div class="row-fluid">
						<% if params[:controller] == "events" && params[:action] == "show" %>
							<div class ="span12">
								<div class='slogan'>
									<%= full_slogan(yield(:title)) %>
								</div>
							</div>
							<div class="fb-like" data-send="true" data-width="450" data-show-faces="true"></div>					
						<%else%>
							<div class ="span3">
							<div class='slogan'>
								<%= full_slogan(yield(:title)) %>
							</div>
							</div>
							<div class ="span9">	
								<div class="fb-like" data-send="true" data-width="450" data-show-faces="true"></div>
							</div>	
						<%end%>
					</div>
				</div>					
			</div>
		</div>
	</header>
 <div class="container-fluid">
	<div class="row-fluid"> 
		 <div class="hidden-phone">
		<div class="span2">
			<div class="category_menu">
				<%# if params[:action] == "index" or params[:controller] == "categories" %>
					<% unless params[:controller] == "events" && params[:action] == "index" %>
						<%= link_to "Alle", root_path %>
						<%else%>
						<%= "Alle" %>
						<%end%>
						
					<%= render :partial => 'categories/menu_category', :collection => categories %>
				<%#end%>
			</div>
		</div> 	
	</div>
		<div class="span8">
			<div class="row-fluid">
				<%= yield %>
			</div>
		</div> 
	</div>
</div>


</body>

<footer>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span12">
				<%= link_to "(c) stage.ly", "http://www.youtube.com/watch?v=6_W_xLWtNa0" %>
			</div>
		</div>
	</div>
</footer>

</html>
