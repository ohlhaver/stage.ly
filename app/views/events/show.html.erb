<% provide :title, event_title(@event) + " @ " + @event.venue.name %>
<% provide :page_title, event_title(@event) + " @ " + @event.venue.name %>
<% provide :keywords, @event.artists.first.name + more_event_titles(@event) + ", " + @event.venue.name %>

<div class = "span8">
	<div class="row-fluid">
		

			<br>

			<div class ="event_details_item">
				<div class="hidden-phone"><div class ="span1"><i class="icon-user"></i> </div></div>
				<div class ="span11">
					
					<%= render @event.artists %>

				</div>
			</div>
			<div class="hidden-phone"><br><br></div>

			<% if @event.works.any? %>
				<div class ="event_details_item">
					<div class="hidden-phone"><div class ="span1"><i class="icon-book"></i> </div></div>
					<div class ="span11">
					
						<%= render :partial => 'works/full_work', :collection => @event.works %>
					</div>
				</div>
				<div class="hidden-phone"><br><br></div>
			<% end %> 


			<div class ="event_details_item">
				<div class="hidden-phone"><div class ="span1"><i class="icon-tags"></i> </div></div>
				<div class ="span11">		
					<% if work_categories(@event) && work_categories(@event).uniq.first %>
					<% if work_categories(@event).uniq.first.id == params[:id].to_i && params[:controller] == "categories" %><%= work_categories(@event).uniq.first.name %>
					<% else %><%=link_to work_categories(@event).uniq.first.name, work_categories(@event).uniq.first %><% end %><%= render work_categories(@event).uniq.drop(1)%> 
				<% else %>
					<% if @event.categories.uniq.first %>
							<% if @event.categories.uniq.first.id == params[:id].to_i && params[:controller] == "categories" %><%= @event.categories.uniq.first.name %>
							<% else %>
								<%=link_to @event.categories.uniq.first.name, @event.categories.uniq.first %><% end %><%= render @event.categories.uniq.drop(1)%> 
					<% end %>
				<% end %>
				<%= link_to @event.type.singular, @event.type  %>

				</div>
			</div>
			<div class="hidden-phone"><br><br></div>

			
			<div class ="event_details_item">
				<div class="hidden-phone"><div class ="span1"><i class="icon-calendar"></i> </div></div>
				<div class ="span11">
				<%= @event.time.strftime("%a, %b %d, %H:%M Uhr") %>
				</div>
			</div>
			<br>
			
			<div class ="event_details_item">
				<div class="hidden-phone"><div class ="span1"><i class="icon-map-marker"></i> </div></div>
				<div class ="span11">
					<%= link_to @event.venue.name, @event.venue %>
					<br>
					<%= @event.venue.address %> <%= link_to "(Map)","http://maps.google.de/maps?q=#{@event.venue.address}+Lübeck" %>
					<br>
					<%= link_to @event.venue.url, "http://#{@event.venue.url}" %>
					
				</div>
			</div>
			<div class="hidden-phone"><br><br></div><br>
			

			<%if @event.price != "" %>		
				<div class ="event_details_item">	
					<div class="hidden-phone"><div class ="span1"><i class="icon-barcode"></i> </div></div>
					<div class ="span11">
						<%= "Preis: " + @event.price %>
					</div>
				</div>
				<div class="hidden-phone"><br><br></div><br>
			<%end%>

			<%if @event.url != "" %>		
				<div class ="event_details_item">	
					<div class="hidden-phone"><div class ="span1"><i class="icon-zoom-in"></i> </div></div>
					<div class ="span11">
						<%= link_to truncate(@event.url, :length => 20, :omission =>"...", :separator => ' '), "http://#{@event.url}" %>
					</div>
				</div>
				<div class="hidden-phone"><br><br></div><br>
			<%end%>





			
		<li></li>


			
			
		
	<% if @same_artists_events.any? %>
		<div class= "same_categories_events">
				<div class = "event_bar">
					<div class="span10">
						Andere Veranstaltungen mit <%= (link_to @event.artists.first.name, @event.artists.first) + more_linked_event_titles(@event) %> in Lübeck:
						
					</div>
				</div>
				<br><br><br>


				<table class="table table-striped">
				  <tbody>
					<%= render :partial => 'short_event', :collection => @same_artists_events %>
				</tbody>
				</table>
		</div>
	<%end%>	
	</div>	
</div>

<% if @same_categories_events.any? %>
<div class = "span4">
		Andere <%= link_to @event_categories.first.name, @event_categories.first %><%= render @event_categories.drop(1) %> Veranstaltungen in Lübeck:
		<br><br><br>
	<table class="table table-striped">
	  <tbody>
		<%= render :partial => 'very_short_event', :collection => @same_categories_events %>
	  </tbody>
	</table>
</div>
<%end%>
	



	


	
