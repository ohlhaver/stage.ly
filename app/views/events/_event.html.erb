<tr onclick="location.href='<%=event_path(event)%>';" style="cursor:pointer">
        <td>
<div id = "event_listing" >
	<div class ="span6">
		<div class="row-fluid">
			<% unless params[:controller] == "works" %>
				<% if event.works.any? %>	
					<div class="span6">
							
							<div class ="event_details_item"%>
								<% if event.type.gid == 1 %>
									<%= render event.composers %>
								<% else %>
									<%= render event.works %>
								<% end %>
							</div>						
					</div>
				<% end %> 
			<% end %>


			<div class="span6">
				<% unless event.type.gid == 2 %>
					<%= render event.artists %>
				<% end %>
			</div>
		</div>
	</div>




	<% unless params[:controller] == "types" or params[:controller] == "categories" or params[:controller] == "artists" %>
		<div class="span2">
			<%= link_to event.type.singular, event.type %>
		</div>
	<% end %>



	<% unless params[:controller] == "categories" or params[:controller] == "events" or params[:controller] == "works"%>
		<div class="span2">
				<% if event_categories(event) && event_categories(event).uniq.first %>
					<% if event_categories(event).uniq.first.id == params[:id].to_i && params[:controller] == "categories" %><%= event_categories(event).uniq.first.name %>
					<% else %><%=link_to event_categories(event).uniq.first.name, event_categories(event).uniq.first %><% end %><%= render event_categories(event).uniq.drop(1)%> 
				<% end %>
				<% if event.subcategories.any? %>
					<br><%= event.subcategories.uniq.first.name %><%= render event.subcategories.uniq.drop(1) %>
				<% end %>

		</div>
	<% end %>

	<% if params[:controller] == "categories" && @category.subcategories.any? %>

		<div class="span2">
			<% if event.subcategories.any? %>
				<%= event.subcategories.uniq.first.name %><%= render event.subcategories.uniq.drop(1) %>
			<% end %>
		</div>

	<%end%>
	
	<% unless params[:controller] == "venues"%>
		<div class="span2">
				<div class="hidden-phone">
					<%= link_to event.venue.name, event.venue unless params[:controller] == "venues"%>
				</div>
		</div>
	<%end%>

	<div class="span2">
		<%= event.time.strftime("%a %H:%M Uhr, %b %d") %>
	</div>
	
</div>
</td>
</tr>


